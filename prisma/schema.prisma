generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String     
  password  String
  booking   Booking[]
  isAdmin   Boolean    @default(false)
}

model Room {
  id          Int    @id @default(autoincrement())
  roomName    String
  description String
  price       Int
  image       String
  type        String
  booking     Booking[]
}

model Booking {
  id          Int    @id @default(autoincrement())
  fromDate    DateTime
  toDate      DateTime

  user        User @relation(fields: [userId], references: [id])
  userId      Int

  room        Room @relation(fields: [roomId], references: [id])
  roomId      Int

  review      Review? 
}

model Review {
  id          Int    @id @default(autoincrement()) 
  description String
  rating      Int
  image       String
  booking     Booking @relation(fields: [bookingId], references: [id])
  bookingId   Int     @unique
}